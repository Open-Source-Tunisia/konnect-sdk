{
  "name": "konnect-sdk",
  "version": "1.0.0",
  "description": "TypeScript SDK for Konnect Payment Gateway in Tunisia",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsdown src/index.ts --format cjs,esm --dts",
    "dev": "tsdown src/index.ts --format cjs,esm --dts --watch",
    "fmt": "oxfmt -c .config/.oxfmtrc.json",
    "lint": "oxlint -c .config/.oxlintrc.json --type-aware --type-check --deny-warnings",
    "test": "vitest --silent=passed-only",
    "test:run": "vitest run --silent=passed-only",
    "typecheck": "tsc --noEmit",
    "prepare": "husky install",
    "prepublishOnly": "bun run build && bun run test:run"
  },
  "keywords": [
    "konnect",
    "payment",
    "gateway",
    "tunisia",
    "sdk",
    "typescript",
    "payments"
  ],
  "author": "Aziz Becha",
  "license": "MIT",
  "devDependencies": {
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "oxfmt": "0.17.0",
    "oxlint": "1.32.0",
    "tsdown": "^0.17.3",
    "typescript": "^5.9.3",
    "vitest": "4.0.15"
  },
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/azizbecha/konnect-sdk.git"
  },
  "dependencies": {},
  "lint-staged": {
    "src/**/*.ts": [
      "oxlint --fix -c .config/.oxlintrc.json",
      "oxfmt -c .config/.oxfmtrc.json"
    ]
  }
}
